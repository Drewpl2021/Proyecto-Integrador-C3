<script>
  var fechaInput = document.getElementById('fecha');

  fechaInput.addEventListener('focus', function () {
    this.classList.add('active');
  });

  fechaInput.addEventListener('blur', function () {
    if (!this.value) {
      this.classList.remove('active');
    }
  });
</script>
