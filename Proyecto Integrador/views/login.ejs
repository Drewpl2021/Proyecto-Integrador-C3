    <!--Login-->
    <div class="login-box" style="margin-left: 300px; height: 400px;">
      <h2 style="font-size: 25px;">Inicio de Sesión</h2>
      <form action="admin" method="POST">
        <div class="user-box">
          <input type="text" name="users" id="floatingInput" required>
